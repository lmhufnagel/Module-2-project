
<div class="gallery2 animated fadeIn">
  <div class="profile-card">
    <a target="_self" href="#>">
      <img src="/profile.png" alt="Fjords" width="500" height="500">
    </a>
    <div class="desc"><%=@user.name%></div>
    <div class="desc">Bio: <%=@user.bio%></div>
    <div class="desc">Experience Points: <%=@user.EXP%></div>
    <div class="desc">Favorite Food: <%= @user.favorite_food%></div>
  </div>
</div>

<%@user.reviews.each do |review| %>
<div class="gallery3 animated fadeIn">
  <div class="profile-card">
    <a target="_self" href="/reviews/<%=review.id%>">
      <img src="/knife.png" alt="Fjords" width="250" height="250">
    </a>
    <div class="desc"><%=review.restaurant.name%> Review</div>
  </div>
</div>
<%end%>

<a href="/users/<%=session[:id]%>/edit"><button class="buttonHome button5">Edit Profile</button></a>
